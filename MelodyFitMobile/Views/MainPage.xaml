<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodyFitMobile.Views.MainPage">

    <Grid Padding="24">
        <Border
            Padding="32"
            StrokeThickness="0"
            BackgroundColor="{AppThemeBinding 
                                Light={StaticResource White},
                                Dark={StaticResource SurfaceDark}}"
            >

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow 
                    Radius="20"
                    Opacity="0.25"
                    Offset="0,8"
                    />
            </Border.Shadow>
            
            <VerticalStackLayout
                Spacing="28"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                >
                <Image
                    Source="logo"
                    HeightRequest="96"
                    WidthRequest="96"
                    HorizontalOptions="Center"
                />
                <Label
                    Text="MelodyFit"
                        Style="{StaticResource Headline}"
                />
                <Label 
                    Text="Music that moves with you"
                    FontSize="16"
                    TextColor="{AppThemeBinding Light={StaticResource TextSecondaryDark},
                                                Dark={StaticResource TextSecondaryLight}}"
                    HorizontalTextAlignment="Center"
                    />
                <Button 
                    Text="Sign up"
                    HorizontalOptions="Fill"
                    Clicked="OnSignUpClicked"
                    />

                <Button
                    Text="Log In"
                    HorizontalOptions="Fill"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="1"
                    Clicked="OnLoginClicked" />

            </VerticalStackLayout>
        </Border>
        
            
    </Grid>

</ContentPage>
