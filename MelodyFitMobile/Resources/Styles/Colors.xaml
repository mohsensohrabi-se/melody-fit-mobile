<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Brand Colors -->
    <Color x:Key="Primary">#1E88E5</Color>
    <Color x:Key="PrimaryDark">#1565C0</Color>
    <Color x:Key="Accent">#E91E63</Color>
    <Color x:Key="AccentSoft">#F8BBD0</Color>
    
    <!-- Fitness Feedback -->
    <Color x:Key="Success">#2ECC71</Color>
    <Color x:Key="Warning">#F39C12</Color>
    <Color x:Key="Danger">#E74C3C</Color>
    
    <!-- Static Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#111111</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="Magenta">#D81B60</Color>
    
    <!-- Dark Mode Optimized -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    
    <!-- Text Color -->
    <Color x:Key="TextPrimaryLight">#111111</Color>
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryLight">#6E6E6E</Color>
    <Color x:Key="TextSecondaryDark">#B3B3B3</Color>
    
    <!-- Grays -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#D6D6D6</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{AppThemeBinding 
                                                   Light ={StaticResource  BackgroundLight},
                                                   Dark ={StaticResource BackgroundDark}}" />
</ResourceDictionary>